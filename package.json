{
  "name": "obsidian-plugin-template",
  "version": "0.1.0",
  "description": "A minimal template for Obsidian plugins",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "build:release": "tsc -noEmit -skipLibCheck && RELEASE_BUILD=true node esbuild.config.mjs production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -noEmit -skipLibCheck",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "prepare": "husky"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^16.11.6",
    "builtin-modules": "3.3.0",
    "dotenv": "^16.0.3",
    "esbuild": "0.17.3",
    "eslint": "^9.15.0",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.15.0"
  }
}
